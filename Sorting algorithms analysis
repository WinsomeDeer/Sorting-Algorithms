#include <iostream>
#include <vector>
using namespace std;
void swap(int* xp, int* yp)
{
    int temp = *xp;
    *xp = *yp;
    *yp = temp;
}
// Bubble Sort.
void Bubble_Sort(int x[], int n){
    for(int i = 0; i < n-1; i++){
        for(int j = 0; j < n-i-1; j++){
            if(x[j] > x[j+1]){
                swap(&x[j], &x[j+1]);
            }
        }
    }
}
// Main function.
int main(void){
    int arr[] = {3,2,1,0};
    int N = sizeof(arr)/sizeof(arr[0]);
    Bubble_Sort(arr, N);
    for(int i = 0; i < N; i++){
        cout << arr[i] << " ";
    }
    return 0;
}
